<style>
  .footer {
    background: linear-gradient(135deg, #1e3a8a 0%, #1e40af 50%, #3b82f6 100%);
    color: white;
    padding-top: 3rem;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 2rem;
  }

  .footer-section h4 {
    color: #fbbf24;
    font-size: 1.2rem;
    font-weight: 600;
    margin-bottom: 1rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .footer-logo h3 {
    color: #fbbf24;
    font-size: 1.8rem;
    font-weight: 700;
    margin: 0 0 0.5rem 0;
  }

  .footer-logo p {
    color: #bfdbfe;
    font-size: 1rem;
    margin: 0 0 1rem 0;
  }

  .footer-description {
    color: #dbeafe;
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(255, 255, 255, 0.1);
    border-radius: 50%;
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
  }

  .social-link:hover {
    background: #fbbf24;
    color: #1e3a8a;
    transform: translateY(-2px);
  }

  .footer-links {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .footer-links li {
    margin-bottom: 0.5rem;
  }

  .footer-links a {
    color: #dbeafe;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .footer-links a:hover {
    color: #fbbf24;
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .contact-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #dbeafe;
  }

  .contact-item svg {
    color: #fbbf24;
    flex-shrink: 0;
  }

  .hours {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .hour-item {
    display: flex;
    justify-content: space-between;
    color: #dbeafe;
    font-size: 0.9rem;
  }

  .hour-item span:first-child {
    font-weight: 500;
  }

  .footer-bottom {
    margin-top: 3rem;
    padding: 1.5rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .footer-bottom-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .footer-bottom p {
    color: #bfdbfe;
    margin: 0;
  }

  .footer-bottom-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-bottom-links a {
    color: #bfdbfe;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.3s ease;
  }

  .footer-bottom-links a:hover {
    color: #fbbf24;
  }

  @media (max-width: 768px) {
    .footer-content {
      grid-template-columns: 1fr;
      text-align: center;
    }

    .social-links {
      justify-content: center;
    }

    .contact-item {
      justify-content: center;
    }

    .hour-item {
      flex-direction: column;
      gap: 0.25rem;
      text-align: center;
    }

    .footer-bottom-content {
      flex-direction: column;
      text-align: center;
    }

    .footer-bottom-links {
      justify-content: center;
    }
  }

  @media (max-width: 480px) {
    .footer-content {
      padding: 0 1rem;
    }

    .footer-bottom-content {
      padding: 0 1rem;
    }

    .footer-bottom-links {
      flex-direction: column;
      gap: 0.5rem;
    }
  }
</style> 